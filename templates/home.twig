{% extends "base.twig" %}

{% block title %}{{ app_name }} - Welkom bij de beste online webshop{% endblock %}

{% block meta_description %}Welkom bij {{ app_name }}! Ontdek onze uitgebreide collectie producten met snelle levering en uitstekende service. Shop nu online!{% endblock %}

{% block content %}
<div class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary via-blue-600 to-blue-800 text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-black opacity-10"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="text-center lg:text-left">
                    <h1 class="text-4xl lg:text-6xl font-bold mb-6 animate-fade-in">
                        Welkom bij <span class="text-yellow-300">{{ app_name }}</span>
                    </h1>
                    <p class="text-xl lg:text-2xl mb-8 text-blue-100 animate-fade-in" style="animation-delay: 0.2s">
                        Ontdek onze geweldige collectie producten met de beste kwaliteit en service
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in" style="animation-delay: 0.4s">
                        <a href="/products" class="bg-white text-primary px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg">
                            Shop Nu
                        </a>
                        <a href="/categories" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-primary transition-all duration-300 transform hover:scale-105">
                            Bekijk Categorieën
                        </a>
                    </div>
                </div>
                <div class="hidden lg:block">
                    <div class="relative">
                        <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-8 transform rotate-3 hover:rotate-0 transition-transform duration-500">
                            <div class="space-y-4">
                                <div class="flex items-center space-x-3">
                                    <div class="w-4 h-4 bg-green-400 rounded-full animate-pulse"></div>
                                    <span class="text-sm">✓ Gratis verzending vanaf €50</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="w-4 h-4 bg-yellow-400 rounded-full animate-pulse" style="animation-delay: 0.2s"></div>
                                    <span class="text-sm">✓ 30 dagen retourrecht</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="w-4 h-4 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 0.4s"></div>
                                    <span class="text-sm">✓ 24/7 klantenservice</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="w-4 h-4 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 0.6s"></div>
                                    <span class="text-sm">✓ Veilig betalen</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="text-center group">
                    <div class="bg-primary/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary/20 transition-colors">
                        <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Snelle Levering</h3>
                    <p class="text-gray-600">Besteld voor 22:00, morgen in huis. Gratis verzending vanaf €50.</p>
                </div>
                <div class="text-center group">
                    <div class="bg-success/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-success/20 transition-colors">
                        <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Veilig Betalen</h3>
                    <p class="text-gray-600">Betaal veilig met iDEAL, creditcard of andere betalingsmethoden.</p>
                </div>
                <div class="text-center group">
                    <div class="bg-accent/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent/20 transition-colors">
                        <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">24/7 Support</h3>
                    <p class="text-gray-600">Onze klantenservice staat altijd voor je klaar via chat, telefoon of email.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    {% if categories %}
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Shop per Categorie</h2>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">Ontdek onze uitgebreide collectie, zorgvuldig ingedeeld in categorieën</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {% for category in categories %}
                <a href="/categories/{{ category.id }}" class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                    <div class="aspect-w-16 aspect-h-12 bg-gradient-to-br from-gray-100 to-gray-200">
                        {% if category.image %}
                        <img src="{{ category.image }}" alt="{{ category.name }}" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                        {% else %}
                        <div class="w-full h-48 bg-gradient-to-br from-primary/20 to-primary/40 flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                            </svg>
                        </div>
                        {% endif %}
                    </div>
                    <div class="p-6">
                        <h3 class="font-semibold text-lg text-gray-900 mb-2 group-hover:text-primary transition-colors">{{ category.name }}</h3>
                        {% if category.description %}
                        <p class="text-gray-600 text-sm mb-3">{{ category.description|truncate(80) }}</p>
                        {% endif %}
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">
                                {{ category.product_count|default(0) }} {% if category.product_count == 1 %}product{% else %}producten{% endif %}
                            </span>
                            <svg class="w-5 h-5 text-primary group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </div>
                    </div>
                </a>
                {% endfor %}
            </div>
            <div class="text-center mt-8">
                <a href="/categories" class="inline-flex items-center px-6 py-3 border border-primary text-primary font-medium rounded-lg hover:bg-primary hover:text-white transition-all duration-300">
                    Alle Categorieën Bekijken
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Featured Products Section -->
    {% if featured_products %}
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Uitgelichte Producten</h2>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">Onze meest populaire en aanbevolen producten</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {% for product in featured_products %}
                <div class="group bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                    <div class="relative">
                        {% if product.image %}
                        <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                        {% else %}
                        <div class="w-full h-48 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        {% endif %}
                        
                        <!-- Stock Badge -->
                        {% if product.stock_quantity <= 0 %}
                        <div class="absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded text-xs font-medium">
                            Uitverkocht
                        </div>
                        {% elseif product.stock_quantity <= 5 %}
                        <div class="absolute top-2 left-2 bg-orange-500 text-white px-2 py-1 rounded text-xs font-medium">
                            Laatste {{ product.stock_quantity }}
                        </div>
                        {% endif %}

                        <!-- Category Badge -->
                        {% if product.category_name %}
                        <div class="absolute top-2 right-2 bg-black/50 text-white px-2 py-1 rounded text-xs">
                            {{ product.category_name }}
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="p-4">
                        <h3 class="font-semibold text-gray-900 mb-2 group-hover:text-primary transition-colors line-clamp-2">
                            {{ product.name }}
                        </h3>
                        {% if product.description %}
                        <p class="text-gray-600 text-sm mb-3 line-clamp-2">{{ product.description|truncate(100) }}</p>
                        {% endif %}
                        
                        <div class="flex items-center justify-between mb-4">
                            <span class="text-2xl font-bold text-primary">€{{ product.price|number_format(2, ',', '.') }}</span>
                            {% if product.stock_quantity > 0 %}
                            <span class="text-sm text-green-600 font-medium">Op voorraad</span>
                            {% endif %}
                        </div>
                        
                        <div class="flex space-x-2">
                            <a href="/products/{{ product.id }}" class="flex-1 bg-gray-100 text-gray-800 px-4 py-2 rounded-lg text-center font-medium hover:bg-gray-200 transition-colors">
                                Bekijken
                            </a>
                            {% if product.stock_quantity > 0 %}
                            <button onclick="addToCart({{ product.id }})" class="flex-1 bg-primary text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-600 transition-colors">
                                Toevoegen
                            </button>
                            {% else %}
                            <button disabled class="flex-1 bg-gray-300 text-gray-500 px-4 py-2 rounded-lg font-medium cursor-not-allowed">
                                Uitverkocht
                            </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="text-center mt-8">
                <a href="/products" class="inline-flex items-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-blue-600 transition-all duration-300">
                    Alle Producten Bekijken
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Newsletter Section -->
    <section class="py-16 bg-gradient-to-r from-primary to-blue-600">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold text-white mb-4">Blijf op de hoogte!</h2>
            <p class="text-xl text-blue-100 mb-8">Ontvang de nieuwste producten en exclusieve aanbiedingen rechtstreeks in je inbox</p>
            <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
                <input type="email" placeholder="Jouw e-mailadres" required
                       class="flex-1 px-4 py-3 rounded-lg border-0 focus:ring-2 focus:ring-yellow-300 focus:outline-none">
                <button type="submit" class="bg-yellow-400 text-gray-900 px-8 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition-colors">
                    Aanmelden
                </button>
            </form>
            <p class="text-blue-200 text-sm mt-4">Geen spam, je kunt je altijd uitschrijven</p>
        </div>
    </section>

    <!-- Trust Indicators -->
    <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-8">
                <h3 class="text-lg font-semibold text-gray-600">Vertrouwd door duizenden klanten</h3>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center opacity-60">
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary">10K+</div>
                    <div class="text-sm text-gray-600">Tevreden klanten</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary">50K+</div>
                    <div class="text-sm text-gray-600">Verkochte producten</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary">4.8★</div>
                    <div class="text-sm text-gray-600">Gemiddelde beoordeling</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary">99%</div>
                    <div class="text-sm text-gray-600">Positieve reviews</div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.alert {
    @apply border rounded-lg p-4;
}

.alert-success {
    @apply bg-green-50 border-green-200 text-green-800;
}

.alert-error {
    @apply bg-red-50 border-red-200 text-red-800;
}

.alert-warning {
    @apply bg-yellow-50 border-yellow-200 text-yellow-800;
}

.alert-info {
    @apply bg-blue-50 border-blue-200 text-blue-800;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
    from { transform: translateY(100%); }
    to { transform: translateY(0); }
}

@keyframes bounceSubtle {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
}
</style>
{% endblock %}

{% block scripts %}
<script>
    // Auto-hide flash messages after 5 seconds
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            alert.style.opacity = '0';
            alert.style.transform = 'translateY(-10px)';
            setTimeout(function() {
                alert.remove();
            }, 300);
        });
    }, 5000);

    // Newsletter subscription
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        const email = this.querySelector('input[type="email"]').value;
        
        // Simple validation
        if (!email || !email.includes('@')) {
            alert('Voer een geldig e-mailadres in');
            return;
        }
        
        // Here you would normally send to your backend
        alert('Bedankt voor je aanmelding! We houden je op de hoogte.');
        this.reset();
    });
</script>
{% endblock %}
