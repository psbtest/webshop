{% extends "base.twig" %}

{% block title %}Order Failed - {{ parent() }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <!-- Error Header -->
        <div class="text-center mb-8">
            <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-4">
                <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Payment Failed</h1>
            <p class="text-lg text-gray-600">We couldn't process your payment. Your order has not been placed.</p>
        </div>

        <!-- Error Details -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
            <h2 class="text-lg font-medium text-red-900 mb-4">What happened?</h2>
            <div class="text-sm text-red-800">
                {% if error_message %}
                <p class="mb-4">{{ error_message }}</p>
                {% endif %}
                
                <p class="mb-2">Common reasons for payment failure:</p>
                <ul class="list-disc list-inside space-y-1 ml-4">
                    <li>Insufficient funds in your account</li>
                    <li>Incorrect payment details</li>
                    <li>Your bank declined the transaction</li>
                    <li>Network connection issues</li>
                    <li>Card expired or blocked</li>
                </ul>
            </div>
        </div>

        <!-- What to do next -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
            <h2 class="text-lg font-medium text-blue-900 mb-4">What can you do?</h2>
            <div class="space-y-3 text-sm text-blue-800">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p>Check your payment details and try again</p>
                </div>
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                    </svg>
                    <p>Try a different payment method</p>
                </div>
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    <p>Contact your bank if the problem persists</p>
                </div>
            </div>
        </div>

        <!-- Cart Preservation Notice -->
        {% if cart_preserved %}
        <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
            <h2 class="text-lg font-medium text-green-900 mb-2">Good news!</h2>
            <p class="text-sm text-green-800">Your cart items have been saved. You can try checking out again without losing your selected products.</p>
        </div>
        {% endif %}

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/cart" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                Try Again
            </a>
            <a href="/products" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                Continue Shopping
            </a>
        </div>

        <!-- Help Section -->
        <div class="mt-8 text-center">
            <p class="text-sm text-gray-600">
                Still having trouble? 
                <a href="/pages/contact" class="text-primary hover:underline font-medium">Contact our support team</a>
                or call us at +31 20 123 4567
            </p>
        </div>

        <!-- Order ID for reference -->
        {% if order_reference %}
        <div class="mt-6 text-center">
            <p class="text-xs text-gray-500">
                Reference ID: {{ order_reference }}
            </p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
